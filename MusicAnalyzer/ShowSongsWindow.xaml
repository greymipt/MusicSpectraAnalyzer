<Window x:Class="WpfApplication1.ShowSongsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="460" Width="350">
    <Grid>
        <DataGrid ItemsSource="{Binding}" AutoGenerateColumns="True"  HorizontalAlignment="Stretch" Margin="0,30,0,0" Name="dataGrid1" VerticalAlignment="Stretch" ColumnWidth="*"
                  GridLinesVisibility="None" AutoGeneratingColumn="dataGrid1_AutoGeneratingColumn" CanUserResizeRows="False" MouseDoubleClick="dataGrid1_MouseDoubleClick" SelectionMode="Single" IsReadOnly="True" />
        <Button Content="Generate Playlist" Height="23" HorizontalAlignment="Left" Margin="50,4,0,0" Name="button1" VerticalAlignment="Top" Width="112" Click="button1_Click" />
        <Button Content="Play all" Height="23" HorizontalAlignment="Left" Margin="187,4,0,0" Name="button2" VerticalAlignment="Top" Width="73" Click="button2_Click" />
    </Grid>
</Window>
